[
	{
		"name": "simple_ls",
		"input": "ls -l /tmp",
		"expected": [
			["TOK_WORD", "ls"],
			["TOK_WORD", "-l"],
			["TOK_WORD", "/tmp"],
			["TOK_EOF", ""]
		]
	},
	{
		"name": "pipes_and_redir",
		"input": "cat file | grep foo > out.txt",
		"expected": [
			["TOK_WORD","cat"],
			["TOK_WORD","file"],
			["TOK_PIPE","|"],
			["TOK_WORD","grep"],
			["TOK_WORD","foo"],
			["TOK_REDIR_OUT",">"],
			["TOK_WORD","out.txt"],
			["TOK_EOF",""]
		]
	},
	{
		"name": "quotes_and_vars",
		"input": "echo \"hello $USER\" 'and more'",
		"expected": [
			["TOK_WORD","echo"],
			["TOK_DQUOTE","hello $USER"],
			["TOK_SQUOTE","and more"],
			["TOK_EOF",""]
		]
	}
]
