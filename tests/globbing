#printf '%s\n' test[z-a] | sort
#printf '%s\n' test[a\-z] | sort
printf '%s\n' * | sort
printf '%s\n' ** | sort
printf '%s\n' ************* | sort
printf '%s\n' */* | sort
printf '%s\n' */*/* | sort

# root-level variety
printf '%s\n' *.md *.c *.txt | sort
printf '%s\n' *.* | sort
printf '%s\n' *.*.* | sort
printf '%s\n' *[!a-zA-Z0-9]* | sort

# mixed/name variants
printf '%s\n' test* | sort
printf '%s\n' *file* | sort
printf '%s\n' *-file *file-* | sort
printf '%s\n' *_* __* _* | sort
printf '%s\n' *- *-- *--- | sort
printf '%s\n' *[._-]* | sort

# POSIX classes
printf '%s\n' [[:upper:]]* | sort
printf '%s\n' [[:lower:]]* | sort
printf '%s\n' [[:alpha:]]* | sort
printf '%s\n' [[:alnum:]]* | sort
printf '%s\n' *[[:digit:]]* | sort
printf '%s\n' *[[:punct:]]* | sort

# numeric playground
printf '%s\n' numeric/* | sort
printf '%s\n' numeric/[0-9] | sort
printf '%s\n' numeric/[0-9][0-9] | sort
printf '%s\n' numeric/*[0-9] | sort
printf '%s\n' numeric/*[!0-9] | sort
printf '%s\n' numeric/*[[:digit:]]* | sort

# shallow + deep playground
printf '%s\n' shallow/* | sort
printf '%s\n' deep/* | sort
printf '%s\n' deep/*/* | sort
printf '%s\n' deep/*/*/*/test? | sort
printf '%s\n' deep/*/*/*/file[0-9] | sort
printf '%s\n' deep/*/*/*/* | sort
printf '%s\n' deep/*/*/*/[a-z]* | sort
printf '%s\n' deep/*/*/*/[!a-z]* | sort

# dotfiles
printf '%s\n' .* | sort
printf '%s\n' .[!.]* | sort
printf '%s\n' dotfiles/.* | sort
printf '%s\n' dotfiles/.[a-z] | sort
printf '%s\n' dotfiles/.[!a] | sort

# symbols playground (literal chars)
printf '%s\n' symbols/* | sort
printf '%s\n' symbols/\* symbols/\? symbols/\[ symbols/\] | sort
printf '%s\n' symbols/! symbols/^ symbols/- | sort
printf '%s\n' symbols/\\* symbols/\\? | sort

# bracket/range edge cases
printf '%s\n' test[a-d] test[!a-d] | sort
printf '%s\n' test[a-zA-Z0-9] | sort
printf '%s\n' test[a-z-] test[-a-z] test[a-] test[-a] | sort
printf '%s\n' test[^a-z] test[!x-z] | sort
printf '%s\n' test[[:alpha:]][[:digit:]] | sort

# multi-pattern mixes
printf '%s\n' *test* *test*test* | sort
printf '%s\n' *a*b* *a*b*c* | sort
printf '%s\n' [ab]*[0-9] [ab]*[!0-9] | sort
printf '%s\n' [a-z]*[0-9]*[a-z] | sort
printf '%s\n' *[a-z][0-9]* | sort

# literal brackets in names
printf '%s\n' test\[a-z\] test\[a\] | sort

# multi-extension
printf '%s\n' test.*.c test.??.c *.md.bak | sort
printf '%s\n' test.backup.* *.*.c | sort

# spaces (if any)
printf '%s\n' *" "* | sort

# --- More edge cases for globbing ---

# single char wildcards
printf '%s\n' test? | sort
printf '%s\n' test?? | sort
printf '%s\n' test??? | sort
printf '%s\n' test* | sort
printf '%s\n' *test | sort
printf '%s\n' *test* | sort
printf '%s\n' *test?* | sort
printf '%s\n' ??? | sort
printf '%s\n' ???* | sort
printf '%s\n' *??? | sort

# asterisk collapse
printf '%s\n' test**** | sort
printf '%s\n' ****test | sort
printf '%s\n' *test**** | sort
printf '%s\n' ****test**** | sort

# bracket negation
printf '%s\n' test[!x] | sort
printf '%s\n' test[^x] | sort
printf '%s\n' test[!a-z] | sort
printf '%s\n' test[^a-z] | sort
printf '%s\n' test[!0-9] | sort
printf '%s\n' test[^0-9] | sort

# bracket ranges and edge cases
printf '%s\n' test[a-c] | sort
printf '%s\n' test[a-bc] | sort
printf '%s\n' test[a-b-c] | sort
printf '%s\n' test[-a] | sort
printf '%s\n' test[a-] | sort
printf '%s\n' test[-a-z] | sort
printf '%s\n' test[a-z-] | sort
printf '%s\n' test[]a] | sort
printf '%s\n' test[!] | sort
printf '%s\n' test[]] | sort
printf '%s\n' test[[] | sort
printf '%s\n' test[]] | sort

# POSIX classes edge
printf '%s\n' test[[:alpha:]] | sort
printf '%s\n' test[![:alpha:]] | sort
printf '%s\n' test[[:digit:]] | sort
printf '%s\n' test[![:digit:]] | sort
printf '%s\n' test[[:upper:]] | sort
printf '%s\n' test[[:lower:]] | sort
printf '%s\n' test[[:alnum:]] | sort
printf '%s\n' test[[:space:]] | sort
printf '%s\n' test[[:punct:]] | sort
printf '%s\n' test[[:xdigit:]] | sort
printf '%s\n' test[![:xdigit:]] | sort

# multiple brackets
printf '%s\n' test[a-z][0-9] | sort
printf '%s\n' test[[:alpha:]][[:digit:]] | sort
printf '%s\n' test[[:alpha:]][![:digit:]] | sort
printf '%s\n' test[[:alpha:]][^[:digit:]] | sort
printf '%s\n' test[[:alpha:]][[:alpha:]] | sort

# literal brackets and escapes
printf '%s\n' test\\[a\\] | sort
printf '%s\n' test\\[\\] | sort
printf '%s\n' test\\[ | sort
printf '%s\n' test\\] | sort
printf '%s\n' test\\[a-z\\] | sort

# leading dotfiles
printf '%s\n' .* | sort
printf '%s\n' .[a-z]* | sort
printf '%s\n' .[!a-z]* | sort
printf '%s\n' .[[:alpha:]]* | sort
printf '%s\n' .[[:digit:]]* | sort
printf '%s\n' .[[:punct:]]* | sort

# trailing wildcards
printf '%s\n' test* | sort
printf '%s\n' *test | sort
printf '%s\n' *test* | sort
printf '%s\n' *test? | sort
printf '%s\n' ?test* | sort
printf '%s\n' *test?? | sort

# only wildcards
printf '%s\n' * | sort
printf '%s\n' ** | sort
printf '%s\n' *** | sort
printf '%s\n' **** | sort
printf '%s\n' ? | sort
printf '%s\n' ?? | sort
printf '%s\n' ??? | sort

# deep directory wildcards
printf '%s\n' */* | sort
printf '%s\n' */*/* | sort
printf '%s\n' */*/*/* | sort
printf '%s\n' */*/*/*/* | sort

# mixed wildcards and brackets
printf '%s\n' *[a-z]* | sort
printf '%s\n' *[!a-z]* | sort
printf '%s\n' *[[:digit:]]* | sort
printf '%s\n' *[[:alpha:]]* | sort
printf '%s\n' *[[:punct:]]* | sort

# edge: empty pattern (should match nothing or all)
printf '%s\n' "" | sort

# edge: only slashes
printf '%s\n' / | sort
printf '%s\n' // | sort
printf '%s\n' /// | sort

# edge: patterns with only special chars
printf '%s\n' [*] | sort
printf '%s\n' [?] | sort
printf '%s\n' [[] | sort
printf '%s\n' []] | sort
printf '%s\n' [!] | sort
printf '%s\n' [-] | sort
printf '%s\n' [a-] | sort
printf '%s\n' [-a] | sort

# edge: patterns with invalid brackets (should fallback to literal)
printf '%s\n' test[ | sort
printf '%s\n' test] | sort
printf '%s\n' test[] | sort
printf '%s\n' test[! | sort
printf '%s\n' test[^ | sort
printf '%s\n' test[--] | sort
printf '%s\n' test[!!] | sort

# edge: patterns with multiple consecutive slashes
printf '%s\n' foo//bar | sort
printf '%s\n' foo///bar | sort
printf '%s\n' foo////bar | sort

# edge: patterns with trailing slash
printf '%s\n' foo/ | sort
printf '%s\n' foo/bar/ | sort
printf '%s\n' foo/bar// | sort

# edge: patterns with escaped special chars
printf '%s\n' foo\\* | sort
printf '%s\n' foo\\? | sort
printf '%s\n' foo\\[ | sort
printf '%s\n' foo\\] | sort
printf '%s\n' foo\\- | sort

# edge: patterns with only negation
printf '%s\n' [!] | sort
printf '%s\n' [^] | sort

# edge: patterns with only dash
printf '%s\n' [-] | sort

# --- Failing / Weird edge cases (likely to differ from bash) ---

# Extended globs / ksh-style (likely unsupported)
printf '%s\n' +(test) | sort
printf '%s\n' ?(test) | sort
printf '%s\n' *(test*) | sort
printf '%s\n' @(test|exam) | sort

# Malformed brackets that bash treats specially
printf '%s\n' test[]a] | sort
printf '%s\n' test[[] | sort
printf '%s\n' test[]] | sort
printf '%s\n' test[--] | sort
printf '%s\n' test[a-] | sort
printf '%s\n' test[-a] | sort

# POSIX classes unknown / malformed
printf '%s\n' test[[:UNKNOWN:]] | sort
printf '%s\n' test[[:alpha] | sort
printf '%s\n' test[:alpha:] | sort

# Character class edge cases
printf '%s\n' test[a-zA-Z0-9_] | sort
printf '%s\n' test[-] | sort
printf '%s\n' test[!-] | sort

# Leading/trailing dashes and mixed placement
printf '%s\n' test[-a-z] | sort
printf '%s\n' test[a-z-] | sort

# Dotfile edge conditions
printf '%s\n' .?* | sort
printf '%s\n' .[a-z]* | sort
printf '%s\n' .*.* | sort

# Patterns that contain only special chars
printf '%s\n' '*' | sort
printf '%s\n' '?' | sort
printf '%s\n' '[*]' | sort
printf '%s\n' '[]' | sort

# Escapes and backslashes in patterns
printf '%s\n' foo\\* | sort
printf '%s\n' foo\\\\* | sort
printf '%s\n' foo\\? | sort
printf '%s\n' foo\\[a-z\\] | sort

# Patterns with spaces and weird quoting
printf '%s\n' '* *' | sort
printf '%s\n' "* *" | sort
printf '%s\n' '*  *' | sort

# Extremely long pattern (stress
printf '%s\n' /tmp/longpattern.test* | sort

# Patterns with multiple slashes and empty components
printf '%s\n' foo//bar | sort
printf '%s\n' */*/ | sort
printf '%s\n' */*/*/ | sort

# Patterns combining many classes and ranges
printf '%s\n' *[A-Za-z0-9_-.]* | sort
printf '%s\n' *[!A-Za-z0-9]* | sort

# Patterns with nested bracket-like sequences
printf '%s\n' test[[:alpha:]-z] | sort
printf '%s\n' test[[:alpha:]a-z] | sort

# Patterns with null/empty matches (edge)
printf '%s\n' '' | sort
printf '%s\n' "" | sort
printf '%s\n' " " | sort

# Mixed literal and special sequences that confuse expanders
printf '%s\n' '*[[:digit:]]*'* | sort
printf '%s\n' '*[[:digit:]]*'* | sort

# Patterns expecting recursive glob (not supported)
printf '%s\n' **/*.txt | sort
printf '%s\n' **/* | sort

# Uncommon UTF-8 / wide chars in file names
printf '%s\n' *é* | sort
printf '%s\n' *漢* | sort

# Patterns with parentheses and pipes as literals
printf '%s\n' '*(a|b)' | sort
printf '%s\n' '(test)' | sort

# Broken bracket constructs
printf '%s\n' '[a' | sort
printf '%s\n' 'a]' | sort

# Compound weird commands to exercise integration
printf '%s\n' * | grep -E '^[[:digit:]]' || true
printf '%s\n' * | wc -l
printf '%s\n' * | head -n 5

# Clean up created long test file (ignore errors)
rm -f /tmp/longpattern.test || true
# --- end failing/weird section ---
