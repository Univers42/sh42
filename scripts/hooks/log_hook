#!/bin/sh
# Colored logging utility for git hooks

LOG_DIR=".git/hook-logs"
mkdir -p "$LOG_DIR"

# ANSI color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

timestamp() {
	date +"%Y-%m-%d %H:%M:%S"
}

log_broadcast() {
	title="$1"
	echo "${GREEN}${title} [$(timestamp)]${NC}" | tee -a "$LOG_DIR/hook.log"
}

log_info() {
	echo "\t${BLUE}[INFO]${NC} $*" | tee -a "$LOG_DIR/hook.log"
}

log_error() {
	echo "\t${RED}[ERROR]${NC} $*" | tee -a "$LOG_DIR/hook.log" >&2
}

log_warn() {
	echo "\t${YELLOW}[WARN]${NC} $*" | tee -a "$LOG_DIR/hook.log"
}

log_success() {
	echo "\t${GREEN}[SUCCESS]${NC} $*" | tee -a "$LOG_DIR/hook.log"
}

log_hook() {
	hook="$1"
	shift
	echo "\t${GREEN}[$hook]${NC} $*" | tee -a "$LOG_DIR/hook.log"
}

log_example() {
	echo "\t${GREEN}[EXAMPLE]${NC} $*" | tee -a "$LOG_DIR/hook.log"
}
